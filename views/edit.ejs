<%- include('includes/head') %>
<h1>Edit Product</h1>
<form action="/edit/<%= product.id %>" method="POST" enctype="multipart/form-data">
    <input type="text" name="title" value="<%= product.title %>" required><br>
    <input type="text" name="price" value="<%= product.price %>" required><br>
    <textarea name="description" required><%= product.description %></textarea><br>
    <input type="file" name="image"><br>
    <button type="submit">Update Product</button>
</form>
<%- include('includes/end') %>
